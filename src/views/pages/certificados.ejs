                    async function productosEntradasTable() {

                        $('#tableProductosEntradas').DataTable({
                            "bDestroy": true,
                            "processing": true,
                            "serverSide": true,
                            "order": [],
                            "ajax": { url: `/tableProductosEntradas`, type: "GET" },
                            "columns": [
                                { "data": [0] },
