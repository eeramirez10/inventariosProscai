            <script>

                $(document).ready(function () {


                    let tituloProductos = document.querySelector('#windowProductos .modal-title');

                    let codigo;
                    let proveedor;
                    let entrada;
                    let ordenCompra;

                    let productos;

                    let dataTable;

                    

